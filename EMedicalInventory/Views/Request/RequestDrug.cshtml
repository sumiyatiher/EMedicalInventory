@model EMedicalInventory.ViewModels.Request.RequestObatViewModel;

@{
	ViewData["Title"] = "Add New Drug";
}

<div class="card">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">New Request</h4>
    </div>
    <div class="card-body">
        <form asp-action="CreateRequest" method="post">
            <div class="form-group">
                <label for="MedicineId" class="form-label">Drug</label>
                <select asp-for="MedicineId" asp-items="ViewBag.Medicines" class="form-control">
                    <option value="">Choose Drug</option>
                </select>
                <span asp-validation-for="MedicineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Quantity" class="form-label">Quantity</label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div style="margin-top: 10px;">
                <button asp-controller="Request" asp-action="CreateRequest" type="submit" class="btn btn-primary">Request</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
        

    </div>
</div>