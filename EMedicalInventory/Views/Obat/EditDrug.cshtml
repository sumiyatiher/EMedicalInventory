@model EMedicalInventory.ViewModels.Obat.ObatViewModel

@{
    ViewData["Title"] = "Edit Drug";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Edit Drug</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="DrugName">Drug Name</label>
                <input type="text" class="form-control" asp-for="DrugName" />
                <span asp-validation-for="DrugName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Stock">Stock</label>
                <input type="number" class="form-control" asp-for="Stock" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" step="0.01" class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ExpiredDate">Expired Date</label>
                <input type="date" class="form-control" asp-for="ExpiredDate" />
                <span asp-validation-for="ExpiredDate" class="text-danger"></span>
            </div>

            <div style="margin-top: 10px;">
                <button asp-action="UpdateObat" asp-controller="Obat" type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
